<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainActivitybar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/button2"
                        style="@android:style/Widget.DeviceDefault.ImageButton"
                        android:layout_width="184dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:onClick="temp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icons8pdf96"
                        android:text="Templates" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Invoice" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imagebtn"
                        android:layout_width="184dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="1"
                        android:onClick="open"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/icons8pdf480" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Business" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/linear"
                android:layout_marginEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/button3"
                        android:layout_width="184dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:onClick="drop"
                        android:scaleType="centerInside"
                        android:src="@drawable/icons8add96"
                        android:text="droplist" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Products" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/button5"
                        android:layout_width="184dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="1"
                        android:onClick="list"
                        android:scaleType="centerInside"
                        android:src="@drawable/icons8list48" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Sales" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/linear2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="184dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:onClick="stat"
                        android:scaleType="centerInside"
                        android:src="@drawable/icons8businessman80" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Users" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="184dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:onClick="cust"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Clients" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
</LinearLayout>