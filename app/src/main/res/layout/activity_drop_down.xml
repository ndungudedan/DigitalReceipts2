<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout
    tools:context=".dropDown"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Dbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

    </android.support.v7.widget.Toolbar>

            <EditText
                android:id="@+id/dropTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:inputType="textCapWords"
                android:hint="Item" />

            <Button
                android:id="@+id/dropAdd"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/dropTxt"
                android:layout_toEndOf="@+id/dropTxt"
                android:text="ADD" />

            <ListView
                android:id="@+id/dropList"
                style="@android:style/Widget.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dropTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp" />


        </android.widget.RelativeLayout>
