<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    android:id="@+id/currentWeekCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/yearSummaryCard"
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/cur_Wsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales:"
            android:layout_below="@id/date"
            />
        <TextView
            android:id="@+id/sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_toEndOf="@id/cur_Wsa"/>
        <TextView
            android:id="@+id/curr_Wcli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clients:"
            android:layout_below="@id/cur_Wsa"/>
        <TextView
            android:id="@+id/client_served"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cur_Wsa"
            android:layout_toEndOf="@id/curr_Wcli"/>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>