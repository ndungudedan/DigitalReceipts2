<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyStats">

    <androidx.cardview.widget.CardView
        android:id="@+id/today_stat_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                />
            <TextView
                android:id="@+id/tot_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cash"
                android:layout_below="@id/date"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:id="@+id/week_stat_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/today_stat_card"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/week_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                />
            <TextView
                android:id="@+id/week_tot_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cash"
                android:layout_below="@id/week_date"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:id="@+id/month_stat_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/week_stat_card"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/month_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                />
            <TextView
                android:id="@+id/month_tot_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cash"
                android:layout_below="@id/month_date"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>